{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "declarationDir": "./dist/declarations/",
        "noImplicitAny": false,
        "allowJs": false,
        "resolveJsonModule": true,
        "declaration": true,
        "typeRoots": ["./node_modules/@types"],
        "types": [],
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
